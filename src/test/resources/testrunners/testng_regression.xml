<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="Open Cart Test Suite" verbose="4" thread-count="3" parallel = "tests">
	<listeners>
		<listener class-name="com.qa.opencart.listeners.ExtentReportListener"/>
		<listener class-name="com.qa.opencart.listeners.TestAllureListener"/>
	</listeners>
	
	<test name = "Open Cart Login Page test">
		<classes>
			<class name="com.qa.opencart.tests.LoginPagetest"/>
		</classes>	
	</test>
	
	<test name = "Open Cart Accounts Page test">
		<classes>
			<class name="com.qa.opencart.tests.AccountsPageTest"/>
		</classes>	
	</test>
	
	<test name = "Open Cart ProductInfo Page test">
		<classes>
			<class name="com.qa.opencart.tests.ProductInfoPageTest"/>
		</classes>	
	</test>
	
	<!-- <test name = "Open Cart Negative Login Page test">
		<classes>
			<class name="com.qa.opencart.tests.LoginPageNegativeTest"/>
		</classes>	
	</test> -->
	
	<test name = "Open Cart Registration Page test">
		<classes>
			<class name="com.qa.opencart.tests.RegisterPageTest"/>
		</classes>	
	</test>
	
</suite>